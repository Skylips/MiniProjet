{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ 'Registration'| trans}}{% endblock %}

{% block content %}
    <div class="container center">
        <h1>{{ 'Registration'| trans}}</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'row'}}) }}
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Mail'}}) }}
            <span class="error">{{ form_errors(registrationForm.email) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Username'}}) }}
            <span class="error">{{ form_errors(registrationForm.username) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Password'}}) }}
            <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
        </div>
        <div class="input-field col s12">
            <input type="submit" name="" class="btn btn-primary" value="{{ 'Register'| trans}}">
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}