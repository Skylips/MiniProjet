{{ form_start(form, {'attr': {'class': 'row'}}) }}
<div class="input-field col s12 m12 l12">
    {{ form_widget(form.picture) }}
    <span class="error">{{ form_errors(form.picture) }}</span>
</div>

<div class="input-field col s12 m6 l6">

    {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article'}}) }}
    {{ form_label(form.title, 'Nom de l\'evenement') }}
    <span class="error">{{ form_errors(form.title) }}</span>
</div>

<div class="input-field col s12 m6 l6">
    {{ form_widget(form.categorie) }}
    {{ form_label(form.categorie, 'Choisissez un ou plusieurs cat√©gories') }}
</div>

<div class="date col s12 m3 l3">
    <span>Date de l'evenement</span>
    {{ form_widget(form.dateEvent) }}
    {{ form_label(form.dateEvent, '.') }}
</div>

<div class="input-field col s12 m3 l3">
    <input type="date" max="2030-01-01" min="2021-03-23" name="the_date">
</div>

<div class="input-field col s12 m12 l12">
    {{ form_label(form.content, 'Description') }}
    {{ form_widget(form.content, {'attr': {'class': 'materialize-textarea', 'placeholder': 'Le contenu de l\'article'}}) }}
</div>

<div class="input-field col s12 m12 l12">
    <p>
        <label>
            {{ form_widget(form.isPublished, {'attr': {'class': 'filled-in'}}) }}
            <span>Publier l'evenement ?</span>
        </label>
    </p>
</div>

<div class="input-field col s12 m12 l12">
    <input type="submit" name="" value="Enregistrer" class="btn btn-primary">
</div>
{{ form_end(form) }}