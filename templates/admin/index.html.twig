{# templates/admin/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Admin | {{ parent() }}{% endblock %}

{% block content %}
    <div class="admin-page">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a>
                    <h5>{% trans %}Evenement{% endtrans %}</h5>
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>{% trans %}Title{% endtrans %}</th>
                            <th>{% trans %}Published{% endtrans %}</th>
                            <th>{% trans %}Publication date{% endtrans %}</th>
                            <th>{% trans %}Place{% endtrans %}</th>
                            <th>{% trans %}Event date{% endtrans %}</th>
                            <th>{% trans %}Created by{% endtrans %}</th>
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                        {% set i = 1 %}
                        {% for evenement in evenements %}
                            <tr>
                                <td>{{ i }}</td>
                                <td><a href="" target="_blank">{{ evenement.title }}</a></td>
                                <td>
                                    <span class="badge {{ evenement.isPublished ? 'blue' : 'red' }}">
                                        {{ evenement.isPublished ? 'oui' : 'non' }}
                                    </span>
                                </td>
                                <td>{{ evenement.isPublished ? evenement.publicationDate|date('d/m/Y') : '-' }}</td>
                                <td>{{ evenement.Place }}</td>
                                <td>{{ evenement.dateEvent|date('d/m/Y') }}</td>
                                <td>{{ evenement.createur.getUsername()}}</td>
                                <td>
                                    <a href="{{ path('article_edit', {'id': evenement.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('article_remove', {'id': evenement.id}) }}"><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12 m-t-30">
                    <h5>{% trans %}Users{% endtrans %}</h5>
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>{% trans %}Email address{% endtrans %}</th>
                            <th>{% trans %}Username{% endtrans %}</th>
                            <th>{% trans %}Roles{% endtrans %}</th>
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.username }}</td>
                                <td>
                                    <span class="roles {{ user.roles[0] == "ROLE_ADMIN" ? 'blue' : 'green' }}">
                                        {{ user.roles[0] }}
                                    </span>
                                </td>
                                <td>
                                    <a href=""><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}